import java.util.Scanner;

public class Ejercicios {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner teclado = new Scanner(System.in);
		System.out.println("Ingrese su primer número aquí:");
		float num1 = teclado.nextFloat();
		System.out.println("Ingrese su segundo número aquí:");
		float num2 = teclado.nextFloat();
		System.out.println("Ingrese su tercer número aquí:");
		float num3 = teclado.nextFloat();
		
		ordenNumeros();
	}
	
	
	/*Debe diseñar un programa que reciba 3 números por consola y determine cual de los 3 números es el mayor.
	Plus: Imprimir los números ordenados de mayor a menor.
	Plus: Imprimir los números ordenados de menor a mayor.
	*/
	public static void ordenNumeros(float num1, float num2, float num3) {
		//Método 1:
		if(num1 > num2) {
			if(num1<num3) {
				System.out.println("El número mayor es: " +num3);
			}
			else {
				System.out.println("El número mayor es: " +num1);
			}
		}
		else {
			if(num2<num3) {
				System.out.println("El número mayor es: " +num3);
			}
			else {
				System.out.println("El número mayor es: " +num2);
			}
		}
	}
	
	public static void ordenNumerosArr(float num1, float num2, float num3) {
		//Método 1:
		float array[] = new float[3];
		if(num1 > num2) {
			if(num1<num3) {
				System.out.println("El número mayor es: " +num3);
			}
			else {
				System.out.println("El número mayor es: " +num1);
			}
		}
		else {
			if(num2<num3) {
				System.out.println("El número mayor es: " +num3);
			}
			else {
				System.out.println("El número mayor es: " +num2);
			}
		}
	}

}
